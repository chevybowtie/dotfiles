######################################
# TIP: SEE TABLE in ~/.bash_profile
######################################

export TERM=xterm-256color

export LESS='-R'
export LESSOPEN='|~/.lessfilter %s'

# golang
export GOPATH=~/gocode
export PATH="$GOPATH/bin:${PATH}:/usr/local/go/bin"

# ruby rbenv
# export PATH="$HOME/.rbenv/bin:$PATH"
# eval "$(rbenv init -)"
# export PATH="$HOME/.rbenv/plugins/ruby-build/bin:$PATH"
# export PATH="/home/paul/.rbenv/shims:$PATH"
# export GEM_HOME=~/.ruby/
# export PATH="$PATH:~/.ruby/bin"

export EDITOR=/usr/bin/nano

# for self hosted kubernetes
export no_proxy=$no_proxy,*.docker.internal

# VS Code path
# export PATH="$PATH:/mnt/c/Program Files/Microsoft VS Code/bin"

# work additions
# export REQUESTS_CA_BUNDLE=~/certs/xxxxxx.crt
# export REQUESTS_CA_BUNDLE=~/certs/xxxxxx.crt

export PATH=/usr/local/bin:/usr/bin:/bin:/usr/local/games:/usr/games:/usr/share/games:/usr/local/sbin:/usr/sbin:/sbin


# set PATH so it includes user's private bins if any exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
  for dir in "$HOME/bin"/*; do
    if [ -d "$dir" ]; then
      export PATH="$PATH:$dir"
    fi
  done
fi

if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
  for dir in "$HOME/.local/bin"/*; do
    if [ -d "$dir" ]; then
      export PATH="$PATH:$dir"
    fi
  done
fi

